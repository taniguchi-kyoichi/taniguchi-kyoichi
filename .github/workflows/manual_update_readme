steps:
  - uses: actions/checkout@v2
  - uses: sarisia/actions-readme-feed@v1
    with:
      url: 'https://note.sarisia.cc/index.xml'
      file: 'README.md'
  - run: |
      git config --global user.name "taniguchi-kyoichi"
      git config --global user.email "kyoichi_dev.9401@icloud.com"
      git add .
      git commit -m "docs: update feed" || true
      git push
